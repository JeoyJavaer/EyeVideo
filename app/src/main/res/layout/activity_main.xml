<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lech.eyevideo.ui.activity.MainActivity">

    <include layout="@layout/title_main"/>
    <FrameLayout
        android:id="@+id/flContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RadioGroup
        android:id="@+id/rgMain"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="46dp">
        <RadioButton
            android:id="@+id/rbHome"
            android:text="@string/home"
            android:drawableTop="@drawable/home_bg_selected"
            style="@style/main_tab_bottom"/>
        <RadioButton
            android:id="@+id/rbDiscovery"
            android:text="@string/discovery"
            android:drawableTop="@drawable/find_bg_selected"
            style="@style/main_tab_bottom"
            />
        <RadioButton
            android:id="@+id/rbHot"
            android:text="@string/hot"
            android:drawableTop="@drawable/find_bg_selected"
            style="@style/main_tab_bottom"/>
        <RadioButton
            android:id="@+id/rbMine"
            android:text="@string/mine"
            android:drawableTop="@drawable/mine_bg_selected"
            style="@style/main_tab_bottom"/>
    </RadioGroup>

</LinearLayout>
